@{
    Layout = "_Layout";
    ViewBag.Title = "Makale Ekle";
}

<ol class="breadcrumb mb-3 mt-2">
    <li class="breadcrumb-item"> <a asp-area="Admin" asp-controller="Home" asp-action="Index">Admin</a></li>
    <li class="breadcrumb-item active"><a asp-area="Admin" asp-controller="Article" asp-action="Index">Article</a></li>
    <li class="breadcrumb-item active"><a asp-area="Admin" asp-controller="Article" asp-action="Add">Add</a></li>
</ol>

<form asp-controller="Article" asp-action="Add" method="post" enctype="multipart/form-data">
    <div class="row mt-2">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <input type="text" id="articleTitle" class="form-control" placeholder="Article Title"/>
                    </div>
                    <div class="form-group">
                        <textarea id="text-editor"></textarea>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    Temel Konfigurasyonlar
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label for="categoryList">Article</label>
                        <select id="categoryList" class="form-control">
                            <option></option>
                            <option >C#</option>
                            <option >C++</option>
                            <option >Javascript</option>
                            <option >Python</option>
                            <option >Java</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="datepicker">Tarih</label>
                        <input type="text" id="datepicker" class="form-control" value="@DateTime.Now.ToShortDateString()"/>
                    </div>
                    <div class="form-group">
                        <label for="thumbnailUpload">Kucuk Resim</label>
                        <input type="file" id="thumbnailUpload" accept="image/*" class="form-control-file"/>
                    </div>
                    <div class="form-group">
                        <input type="checkbox" id="isActive" class="form-check-input" />
                        <label for="isActive" class="form-check-label">Aktif Mi?</label>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block mt-4">Kaydet</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-12 mt-2">
            <div class="card">
                <div class="card-header">
                    SEO Optimizasyonu
                </div>
                <div class="card-body">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="seoWriter">Yazar Adi</label>
                            <input type="text" id="seoWriter" class="form-control" />
                        </div>
                        <div class="form-group col-md-6">
                            <label for="seoTags">Etiketler</label>
                            <input type="text" id="seoTags" class="form-control" />
                        </div>
                        <div class="form-group col-md-12">
                            <label for="seoDescription">Makale Aciklamasi</label>
                            <textarea id="seoDescription" class="form-control"></textarea>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
