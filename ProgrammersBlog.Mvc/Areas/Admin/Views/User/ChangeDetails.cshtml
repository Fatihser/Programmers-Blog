@model ProgrammersBlog.Entities.Dtos.UserUpdateDto
@{
    Layout = "_Layout";
    ViewBag.Title = "Profil Duzenle";
}

<div class="row">
    <div class="col-lg-6 offset-lg-3">
        <div class="card mt-3">
            <div class="card-header">
                <h4 class="text-center"><span class="fas fa-edit"></span> Profil Duzenle</h4>
            </div>
            <div class="card-body">
                <form asp-controller="User" asp-action="ChangeDetails" enctype="multipart/form-data" method="post" id="form-user-update">
                    <div asp-validation-summary="All" class="text-danger" id="validation-summary"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="UserName"></label>
                        <input class="form-control" asp-for="UserName" placeholder="Lutfen kullanici adi giriniz" />
                        <span class="text-danger" asp-validation-for="UserName"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input class="form-control" asp-for="Email" placeholder="Lutfen email giriniz" />
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>


                    <div class="form-group">
                        <label asp-for="PhoneNumber"></label>
                        <input type="text" class="form-control" asp-for="PhoneNumber" placeholder="Lutfen PhoneNumber giriniz" />
                        <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Picture"></label>
                        <input asp-for="Picture" type="hidden" />
                        <img class="my-image" src="~/img/@Model.Picture" alt="@Model.UserName" />
                    </div>

                    <div class="form-group">
                        <label asp-for="PictureFile"></label>
                        <input type="file" accept="image/*" class="form-control-file" asp-for="PictureFile" placeholder="Lutfen PhoneNumber giriniz" />
                        <span class="text-danger" asp-validation-for="PictureFile"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block"><span class="fas fa-save"></span> Kaydet</button>
                        <a class="btn btn-danger btn-block" asp-area="Admin" asp-controller="Home" asp-action="Index">
                            <span class="fas fa-times"></span> Iptal</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
